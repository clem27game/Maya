# Exemple de code Maya avec plusieurs conditions

my.console('=== Exemple de conditions en Maya ===')

# Définissons quelques variables
my.variable temperature = 25
my.variable pluie = false
my.variable age = 16

# Condition 1 : Vérifier la température
my.if(temperature > 30)
my.alors {
    my.console('Il fait chaud aujourd\'hui !')
}
my.if(temperature < 15)
my.alors {
    my.console('Il fait frais aujourd\'hui !')
}

# Condition 2 : Vérifier si il pleut
my.if(pluie)
my.alors {
    my.console('N\'oubliez pas votre parapluie !')
}
my.autre {
    my.console('Pas de pluie aujourd\'hui, profitez-en !')
}

# Condition 3 : Vérifier l'âge
my.if(age >= 18)
my.alors {
    my.console('Vous êtes un adulte.')
}
my.autre {
    my.console('Vous êtes un mineur.')
}

my.console('=== Fin de l\'exemple ===')